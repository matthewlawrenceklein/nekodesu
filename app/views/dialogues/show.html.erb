<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-gray-900 dark:to-gray-800 py-12 px-4">
  <div class="max-w-4xl mx-auto">
    <% if @showing_dialogue %>
      <%# Show dialogue text first %>
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8 mb-6">
        <div class="text-center mb-6">
          <span class="inline-block bg-blue-100 text-blue-800 text-sm font-semibold px-4 py-1 rounded-full">
            <%= @dialogue.difficulty_level.titleize %> (Levels <%= @dialogue.level_range %>)
          </span>
        </div>

        <%# Participants info %>
        <% if @dialogue.participants.present? %>
          <div class="text-center mb-6 text-sm text-gray-600 dark:text-gray-400">
            Conversation between <%= @dialogue.participants.join(" and ") %>
          </div>
        <% end %>

        <%# Unknown kanji warning %>
        <% unknown_kanji = unknown_kanji_in_text(@dialogue.japanese_text, @dialogue.user) %>
        <% if unknown_kanji.any? %>
          <div class="bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-lg p-4 mb-6">
            <div class="flex items-start">
              <svg class="w-5 h-5 text-yellow-600 dark:text-yellow-500 mt-0.5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h3 class="text-sm font-semibold text-yellow-800 dark:text-yellow-400 mb-1">Unknown Kanji Detected</h3>
                <p class="text-sm text-yellow-700 dark:text-yellow-500">This dialogue contains kanji you haven't studied yet: <span class="font-bold"><%= unknown_kanji.join(", ") %></span></p>
                <p class="text-xs text-yellow-600 dark:text-yellow-600 mt-1">These will be <span class="unknown-kanji px-1 rounded">highlighted</span> in the text below.</p>
              </div>
            </div>
          </div>
        <% end %>

        <%# Message-style dialogue display %>
        <div class="space-y-5 mb-8 max-h-[70vh] overflow-y-auto px-2">
          <% dialogue_lines = parse_dialogue_lines(@dialogue.japanese_text) %>
          <% first_speaker = dialogue_lines.first&.dig(:speaker) %>

          <% dialogue_lines.each do |line| %>
            <% if line[:speaker] %>
              <div class="flex <%= message_alignment_class(line[:speaker], first_speaker) %> items-end gap-4">
                <% if line[:speaker] == first_speaker %>
                  <%# Left side - first speaker %>
                  <div class="flex-shrink-0">
                    <% if character_avatar_image(line[:speaker]) %>
                      <%= image_tag character_avatar_image(line[:speaker]), class: "w-16 h-16 rounded-full object-cover border-2 border-gray-200 dark:border-gray-600", alt: line[:speaker] %>
                    <% else %>
                      <div class="w-16 h-16 rounded-full <%= character_avatar_color(line[:speaker]) %> flex items-center justify-center text-white font-bold text-xl border-2 border-gray-200 dark:border-gray-600">
                        <%= line[:speaker].chars.first %>
                      </div>
                    <% end %>
                  </div>
                  <div class="flex flex-col items-start max-w-[70%]">
                    <span class="text-sm text-gray-500 dark:text-gray-400 mb-1 ml-2"><%= line[:speaker] %></span>
                    <div class="bg-gray-100 dark:bg-gray-700 rounded-2xl rounded-bl-sm px-5 py-4">
                      <p class="text-xl text-gray-900 dark:text-gray-100 font-japanese"><%= render_text_with_unknown_kanji(line[:text], @dialogue.user) %></p>
                    </div>
                  </div>
                <% else %>
                  <%# Right side - second speaker %>
                  <div class="flex flex-col items-end max-w-[70%]">
                    <span class="text-sm text-gray-500 dark:text-gray-400 mb-1 mr-2"><%= line[:speaker] %></span>
                    <div class="bg-blue-500 dark:bg-blue-600 rounded-2xl rounded-br-sm px-5 py-4">
                      <p class="text-xl text-white font-japanese"><%= render_text_with_unknown_kanji(line[:text], @dialogue.user) %></p>
                    </div>
                  </div>
                  <div class="flex-shrink-0">
                    <% if character_avatar_image(line[:speaker]) %>
                      <%= image_tag character_avatar_image(line[:speaker]), class: "w-16 h-16 rounded-full object-cover border-2 border-gray-200 dark:border-gray-600", alt: line[:speaker] %>
                    <% else %>
                      <div class="w-16 h-16 rounded-full <%= character_avatar_color(line[:speaker]) %> flex items-center justify-center text-white font-bold text-xl border-2 border-gray-200 dark:border-gray-600">
                        <%= line[:speaker].chars.first %>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>

        <%= button_to "Ready?", ready_dialogue_path(@dialogue), method: :post, class: "w-full bg-green-600 hover:bg-green-700 dark:bg-green-500 dark:hover:bg-green-600 text-white font-bold text-lg py-4 rounded-lg transition duration-200" %>
      </div>
    <% else %>
      <%# Show comprehension question %>
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8">
        <div class="mb-6">
          <div class="flex justify-between items-center mb-4">
            <span class="text-sm text-gray-500 dark:text-gray-400">Question <%= @current_question_index %> of <%= @attempt.total_questions %></span>
            <span class="text-sm font-semibold text-blue-600"><%= @attempt.correct_count %> / <%= @current_question_index - 1 %> correct</span>
          </div>

          <div class="w-full bg-gray-200 rounded-full h-2">
            <div class="bg-blue-600 h-2 rounded-full transition-all duration-300" style="width: <%= (@current_question_index.to_f / @attempt.total_questions * 100).round %>%"></div>
          </div>
        </div>

        <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-100 mb-6"><%= @current_question.question_text %></h2>

        <div class="space-y-3">
          <% @current_question.options.each_with_index do |option, index| %>
            <%= button_to answer_dialogue_path(@dialogue, question_id: @current_question.id, selected_index: index), method: :post, class: "w-full text-left p-4 rounded-lg border-2 border-gray-300 dark:border-gray-600 hover:border-blue-500 dark:hover:border-blue-400 hover:bg-blue-50 dark:hover:bg-gray-700 transition duration-200 flex items-center group" do %>
              <span class="flex-shrink-0 w-8 h-8 rounded-full bg-gray-200 dark:bg-gray-700 group-hover:bg-blue-500 dark:group-hover:bg-blue-400 group-hover:text-white flex items-center justify-center font-semibold mr-4">
                <%= ('A'.ord + index).chr %>
              </span>
              <span class="text-gray-800 dark:text-gray-200 group-hover:text-gray-900 dark:group-hover:text-white"><%= option %></span>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <%= link_to "← Back to Dashboard", root_path, class: "text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300" %>
    </div>
  </div>
</div>

<style>
  .font-japanese {
    font-family: 'Hiragino Kaku Gothic Pro', 'ヒラギノ角ゴ Pro W3', 'Meiryo', 'メイリオ', sans-serif;
    line-height: 2;
  }
  
  .unknown-kanji {
    background-color: rgba(251, 191, 36, 0.3);
    border-bottom: 2px solid rgb(251, 191, 36);
    padding: 0 2px;
    border-radius: 2px;
    cursor: help;
  }
  
  .dark .unknown-kanji {
    background-color: rgba(251, 191, 36, 0.2);
    border-bottom-color: rgb(217, 119, 6);
  }
  
  /* Furigana (ruby) styling */
  ruby {
    ruby-position: over;
    ruby-align: center;
  }
  
  rt {
    font-size: 0.5em;
    color: rgba(251, 191, 36, 0.95);
    font-weight: 600;
    line-height: 1.2;
    letter-spacing: 0.05em;
  }
  
  .dark rt {
    color: rgba(251, 191, 36, 0.9);
  }
  
  /* Highlight the base text of ruby elements (words with furigana) */
  ruby {
    background-color: rgba(251, 191, 36, 0.15);
    padding: 0 2px;
    border-radius: 2px;
  }
  
  .dark ruby {
    background-color: rgba(251, 191, 36, 0.1);
  }
</style>
