# Database Configuration
POSTGRES_USER=nekodesu
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=nekodesu_production

# Rails Configuration
# Generate RAILS_MASTER_KEY: Use the value from config/master.key
RAILS_MASTER_KEY=your_master_key_from_config_master_key

# Generate SECRET_KEY_BASE: Run `rails secret` to generate
SECRET_KEY_BASE=generate_with_rails_secret_command

# Docker Image Configuration
# Format: github-username/repository-name
GITHUB_REPOSITORY=your-username/nekodesu
IMAGE_TAG=latest

# Cloudflare Tunnel Configuration
# Get this token after running the Cloudflare Tunnel setup script
CLOUDFLARE_TUNNEL_TOKEN=your_cloudflare_tunnel_token_here
